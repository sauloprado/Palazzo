<wpml-config>
	
	<custom-fields>
		<custom-field action="translate">official_pg_desc</custom-field>
		<custom-field action="translate">official_pg_key</custom-field>
		<custom-field action="ignore">sbg_selected_sidebar</custom-field>
		<custom-field action="ignore">sbg_selected_sidebar_replacement</custom-field>
		
		<custom-field action="translate">official_slide_caption_title</custom-field>
		<custom-field action="translate">official_slide_caption_text</custom-field>
		<custom-field action="translate">official_slide_url</custom-field>
		<custom-field action="ignore">official_slide_caption_style</custom-field>
		
		<custom-field action="translate">official_client-url</custom-field>
		
		<custom-field action="ignore">official_portfolio-to</custom-field>
		<custom-field action="ignore">official_portfolio-lb</custom-field>
		
		<custom-field action="translate">official_testimonial_name</custom-field>
		<custom-field action="translate">official_testimonial_job</custom-field>
		<custom-field action="translate">official_testimonial</custom-field>

		
		<custom-field action="ignore">official_title</custom-field>
		
		
	</custom-fields>
    
	<custom-types>
        <custom-type translate="1">portfolio</custom-type>
		<custom-type translate="1">slide</custom-type>
		<custom-type translate="1">clients</custom-type>
		<custom-type translate="1">testimonial</custom-type>
    </custom-types>
    
	<taxonomies>
        <taxonomy translate="1">portfolio_types</taxonomy>
		<taxonomy translate="1">slider_types</taxonomy>
		<taxonomy translate="1">clients_types</taxonomy>
		<taxonomy translate="1">testimonial_types</taxonomy>
    </taxonomies>
 
</wpml-config>